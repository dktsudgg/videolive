<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="bottom"
    android:background="@null"
    tools:background="@color/half_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/live_player_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/live_player_hide_btn"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="9"
            android:background="@null"
            android:gravity="center"
            android:text="닫기"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/live_player_chatlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/live_player_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@null"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/live_player_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/live_player_submit_chatting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@null"
                android:gravity="center"
                android:text="작성"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>
